                <select wire:model.defer="editingAddress.type" class="w-full border rounded px-3 py-2">
                    <option class="bg-black" value="shipping">Shipping</option>
                    <option class="bg-black" value="billing">Billing</option>
                </select>
                @error('editingAddress.type') <span class="text-red-600">{{ $message }}</span> @enderror
            </div>

            <div>
                <label class="block font-semibold mb-1">Address Line 1</label>
                <input type="text" wire:model.defer="editingAddress.address_line1" class="w-full border rounded px-3 py-2" />
                @error('editingAddress.address_line1') <span class="text-red-600">{{ $message }}</span> @enderror
            </div>
            <div>
                <label class="block font-semibold mb-1">Address Line 2</label>
                <input type="text" wire:model.defer="editingAddress.address_line2" class="w-full border rounded px-3 py-2" />
                @error('editingAddress.address_line2') <span class="text-red-600">{{ $message }}</span> @enderror
            </div>
            <div>
                <label class="block font-semibold mb-1">City</label>
                <input type="text" wire:model.defer="editingAddress.city" class="w-full border rounded px-3 py-2" />
                @error('editingAddress.city') <span class="text-red-600">{{ $message }}</span> @enderror
            </div>
            <div>
                <label class="block font-semibold mb-1">State</label>
                <input type="text" wire:model.defer="editingAddress.state" class="w-full border rounded px-3 py-2" />
                @error('editingAddress.state') <span class="text-red-600">{{ $message }}</span> @enderror
            </div>
            <div>
                <label class="block font-semibold mb-1">Zip</label>
                <input type="text" wire:model.defer="editingAddress.zip" class="w-full border rounded px-3 py-2" />
                @error('editingAddress.zip') <span class="text-red-600">{{ $message }}</span> @enderror
            </div>
            <div>
                <label class="block font-semibold mb-1">Country</label>
                <input type="text" wire:model.defer="editingAddress.country" class="w-full border rounded px-3 py-2" />
                @error('editingAddress.country') <span class="text-red-600">{{ $message }}</span> @enderror
            </div>

            <div class="flex justify-between mt-12">
                <button type="button" wire:click="cancelEdit" class="bg-red-500 px-4 py-2 rounded hover:bg-red-600 cursor-pointer">Cancel</button>
                <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 cursor-pointer">Save</button>
            </div>
        </form>
    @else
        <button wire:click="addAddress" class="mb-6 bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">Add New Address</button>

        @if (count($addresses) > 0)
            <ul class="space-y-4">
                @foreach ($addresses as $address)
                    <li class="border p-4 rounded shadow-sm flex justify-between items-center">
                        <div>
                            <strong>{{ ucfirst($address['type'] ?? 'Address') }}</strong><br>
                            {{ $address['address_line1'] }} {{ $address['address_line2'] }}<br>
                            {{ $address['city'] }}, {{ $address['state'] }} {{ $address['zip'] }}<br>
                            {{ $address['country'] }}
                        </div>
                        <div class="space-x-2">
                            <button wire:click="editAddress({{ $address['id'] }})" class="text-blue-400 hover:text-blue-500 cursor-pointer">Edit</button>
                            <button wire:click="deleteAddress({{ $address['id'] }})" class="text-red-500 hover:text-red-700 cursor-pointer" onclick="confirm('Delete this address?') || event.stopImmediatePropagation()">Delete</button>
                        </div>
                    </li>
                @endforeach
            </ul>
        @else
            <p>You have no saved addresses.</p>
        @endif
